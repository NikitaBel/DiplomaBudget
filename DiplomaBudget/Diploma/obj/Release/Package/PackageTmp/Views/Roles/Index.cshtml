@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Список ролей";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Создать", "Create", "Roles", htmlAttributes: new { @class = "btn btn-info" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="@Url.Action("Details",new { id = item.Id })" class="btn btn-info"><i class="fa fa-info-circle"></i></a>
                    <a href="@Url.Action("Edit",new { id = item.Id })" class="btn btn-warning"><i class="fa fa-pencil-square-o"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

