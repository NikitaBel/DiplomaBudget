@model Diploma.Models.ViewModels.RolesBindStructItem

@{
    ViewBag.Title = "Create";
}

<h4>Создать Роль</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Название роли</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Подразделение</label>
            <div class="col-md-4">
                @foreach (var item in (SelectList)ViewBag.Structure)
                {
                    <div>
                        <input type="checkbox" name="SelectedStructures" value="@item.Value" />
                        <label class="control-label">@item.Text</label>
                    </div>
                }
            </div>

            <label class="col-md-2 control-label">Статьи</label>
            <div class="col-md-4">
                @foreach (var item in (SelectList)ViewBag.BudgetItem)
                {
                    <div>
                        <input type="checkbox" name="SelectedItems" value="@item.Value" />
                        <label class="control-label">@item.Text</label>
                    </div>
                }
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-info" />
                @Html.ActionLink("Назад", "Index","Roles",htmlAttributes:new {@class= "btn btn-info" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}