@model IEnumerable<Diploma.Models.Structure>

@{
    ViewBag.Title = "Index";
}

<h4>Список подразделений</h4>
<input hidden="hidden" id="Error" value="@ViewBag.Error" />
<p>
    @Html.ActionLink("Создать", "Create", "Structure", htmlAttributes: new { @class = "btn btn-info" })
</p>

@if (Model.Count() == 0)
{
    <label>Нет информации</label>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Level)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th>
                    Действия
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentStructure.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit",new { id = item.ID })" class="btn btn-info"><i class="fa fa-pencil-square-o"></i></a>
                        <a href="@Url.Action("Delete",new { id = item.ID })" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@section scripts{
    <script>
        $(document).ready(function () {
            if ($('#Error').val() != "") {
                alert($('#Error').val());
            }
        });
    </script>
}

