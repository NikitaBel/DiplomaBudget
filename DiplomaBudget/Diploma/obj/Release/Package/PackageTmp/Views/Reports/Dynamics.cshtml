@model IEnumerable<Diploma.Models.Reports.ReportDynamic>

<div style="padding:20px">
    @using (Html.BeginForm("GetDynamics", "Reports", FormMethod.Get))
    {
        <div style="display:inline-block">
            <label>Версия</label>
            @Html.DropDownList("Version", (SelectList)ViewBag.Version, htmlAttributes: new { @class = "form-control" })
        </div>
        <div style="display:inline-block"></div>
        <div style="display:inline-block"></div>
        <div style="display:inline-block">
            <label>Тип данных</label>
            @Html.DropDownList("EntryType", (SelectList)ViewBag.EntryType, null, htmlAttributes: new { @class = "form-control" })
        </div>
        <input type="submit" value="Выполнить" class="btn btn-default" />
    }
</div>

@if (Model == null)
{
    <label></label>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(c => c.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Jan)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Feb)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Mar)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Apr)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.May)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Jun)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Jul)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Aug)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Sep)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Okt)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Nov)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Dec)
                </th>
                <th>
                    <div style="color:blue;font-weight:900">Итог</div>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(c => item.Name)
                    </td>
                    <td>
                        <label>@Math.Round(item.Jan).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Feb).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Mar).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Apr).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.May).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Jun).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Jul).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Aug).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Sep).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Okt).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Nov).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Dec).ToString("#,0")</label>
                    </td>
                    <td>
                        <label>@Math.Round(item.Total).ToString("#,0")</label>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}